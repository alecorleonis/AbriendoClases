<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
	<p>
    <%= f.label :Nombre %><br />
    <%= f.text_field :name %>
  </p>
	<p>
    <%= f.label :Email %><br />
    <%= f.text_field :email %>
  </p>
	<p>
    <%= f.label :Cuenta %><br />
    <%= f.text_field :cuenta %>
  </p>
	<p>
    <%= f.label :Rol %><br />
    <select name="user[role_id]">
      <% Role.all.each do |r| %>
        <option value="<%= r.id %>"><%= r.name %></option>
      <% end %>
    </select>
  </p>
	<p>
    <%= f.label :Carrera %><br />
    <select name="user[career_id]">
      <% Career.all.each do |c| %>
        <option value="<%= c.id %>"><%= c.name %></option>
      <% end %>
    </select>
  </p>
  <p><%= f.submit 'Registrar' %></p>
  
<% end %>

</section>
</div>
