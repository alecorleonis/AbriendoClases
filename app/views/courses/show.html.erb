<% if current_user %>
<div class="content-wrapper">
 <section class="content-header">

<% if userIsCoordinator %>
	<p id="notice"><%= notice %></p>

	<p>
		<strong>Clase:</strong>
		<%= @course.name %>
	</p>

	<p>
		<strong>Requisitos:</strong>
		<%= @course.requirements %>
	</p>

	<p>
		<strong>Requisitos recomendados:</strong>
		<%= @course.recommended_requirements %>
	</p>

	<%= link_to 'Regresar', courses_path %>
<% else %>
	<%= controller.redirect_to requests_path %>
<% end %>

</section>
</div>
<% else %>
<%= controller.redirect_to log_in_path %>
<% end %>
